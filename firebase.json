{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/ai-assistant",
        "function": "app"
      },
      {
        "source": "/hmrc-submit",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}