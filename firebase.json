{
    "hosting": {
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "functions": {
      "source": "functions",
      "region": "europe-west2",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install"
      ],
      "environmentVariables": {
        "GOOGLE_APPLICATION_CREDENTIALS": "./key.json"
      }
    },
    "emulators": {
      "functions": {
        "port": 5001
      },
      "hosting": {
        "port": 5000
      },
      "ui": {
        "enabled": true
      }
    }
  }