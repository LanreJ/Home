{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/dashboard/**",
        "destination": "/dashboard.html"
      },
      {
        "source": "/login/**",
        "destination": "/login.html"
      },
      {
        "source": "/",
        "destination": "/login.html"
      },
      {
        "source": "**",
        "destination": "/login.html"
      }
    ]
  }
}