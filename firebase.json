{
    "hosting": {
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    },
    "functions": {
      "source": "functions",
      "runtime": "nodejs20",
      "codebase": "default",
      "entryPoint": "index",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    },
    "storage": {
      "rules": "storage.rules"
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "emulators": {
      "functions": {
        "port": 5001
      },
      "firestore": {
        "port": 8080
      },
      "auth": {
        "port": 9099
      },
      "hosting": {
        "port": 5000
      },
      "storage": {
        "port": 9199
      },
      "ui": {
        "enabled": true,
        "host": "127.0.0.1",
        "port": 4600
      }
    }
  }